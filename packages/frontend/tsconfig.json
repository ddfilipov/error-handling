{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve", // Next.js handles JSX transformation
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "src/app/*"
      ] // Adjust according to your alias setup
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
